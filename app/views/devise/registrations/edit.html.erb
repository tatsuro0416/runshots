<div class="container">
  <div class="text-center box" >
    <div class="logo mb-3 h2">ユーザー情報編集</div>
    <div class="login-form-1">
      <div class="login-form-main-message"></div>
      <div class="main-login-form text-left">
        <div class="login-group">
          <%= form_with model: @user, url: registration_path(@user), local: true, method: :patch do |f| %>
            <div class='form-group'>
              <%= f.label :profile_image, 'プロフィール写真', class: 'mt-2' %>
              <%= f.file_field :profile_image %>
            </div>
            <div class="form-group">
              <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "User name" %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password", autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Password confirmation", autocomplete: "off" %>
            </div>
            <div class="mb-1">
              <%= f.submit "編集", class: "login-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>