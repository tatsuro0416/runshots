<div class="text-center box form" style="padding:50px 0">
	<div class="logo login-title">Sign up</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="register-form" class="text-left">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
          <%= form_with model: @user, url: user_registration_path(@user), local: true do |form| %>
              <div class="form-group">
                <%= form.text_field :username, autofocus: true, class: "form-control", placeholder: "User name" %>
              </div>
              <div class="form-group">
                <%= form.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= form.password_field :password, autofocus: true, class: "form-control", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= form.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Password confirmation" %>
              </div>

          <% end %>
					
					
					
				</div>
				<%# <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button> %>
        <div class="etc-login-form">
			    <p>already have an account? <a href="#">login here</a></p>
        </div>
			</div>
		</form>
	</div>
</div>